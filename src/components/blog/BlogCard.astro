---
import dayjs from 'dayjs'
import { getLogo } from 'src/utils/logo'

interface Props {
  url: string
  title: string
  description: string
  pubDate: string
  tags: string[]
}
const { url, title, description, pubDate, tags } = Astro.props
const logo = tags.length > 0 ? getLogo(tags[0]!) : ''
---

<a
  href={`/blogs/${url}`}
  class='duration-20 flex h-[110px] w-[350px] items-center rounded-lg border-[1px] border-border px-5 shadow-blog transition hover:bg-gray-100'
>
  <img src={`/logo/${logo}`} alt='icon' width={40} height={40} />
  <div class='w-full pl-5'>
    <p class='text-xl font-bold'>{title}</p>
    <p class='w-[200px] truncate pt-1 text-xs text-surfaceText'>{description}</p>
    <p class='text-end text-[10px] text-surfaceText'>{dayjs(pubDate).format('YYYY/MM/DD')}</p>
  </div>
</a>
